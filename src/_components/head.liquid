<meta charset="utf-8" />
<meta content="width=device-width, initial-scale=1.0" name="viewport" />
  <!-- <link href="https://cdn.jsdelivr.net/npm/holiday.css@0.9.8" rel="stylesheet" /> -->

{% capture page_title %}
  {{ title | strip_html | strip_newlines }}
{% endcapture
%}
<title>
  {% if page_title != "" %}
    {{ page_title | escape }} | {{ metadata.title | escape }}
  {% else %}
    {{ metadata.title | escape }}: {{ metadata.tagline | escape }}
  {% endif %}
</title>

<meta name="description" content="{{ metadata.description }}" />
{% live_reload_dev_js %}
<link rel="stylesheet" href="{% asset_path css %}" data-turbo-track="reload" />
<script src="{% asset_path js %}" defer data-turbo-track="reload"></script>
